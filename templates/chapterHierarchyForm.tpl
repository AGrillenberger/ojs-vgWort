{fbvFormSection title="plugins.generic.chapterHierarchy.hierarchyLevel" for="customExtras"}
    {fbvElement
        type="text"
        name="hierarchyLevel"
        id="hierarchyLevel"
        value=$hierarchyLevel
        maxlength="3"
        inline=true
        size=$fbvStyles.size.LARGE
    }
{/fbvFormSection}

{fbvFormSection title="plugins.generic.chapterHierarchy.chapterNumber" for="customExtras"}
    {fbvElement
        type="text"
        name="chapterNumber"
        id="chapterNumber"
        value=$subtitle
        maxlength="255"
        multilingual=true
        inline=true
        size=$fbvStyles.size.LARGE
    }
{/fbvFormSection}
